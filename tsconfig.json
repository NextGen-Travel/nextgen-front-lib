{
  "compilerOptions": {
    "target": "ES2022",
    "downlevelIteration": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "outDir": "types-vue",
    "noEmit": false,
    "baseUrl": ".",
    "rootDir": ".",
    "emitDeclarationOnly": true,
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "vuetify"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "core/**/*.ts",
    "core/**/*.d.ts",
    "core/**/*.tsx",
    "core/**/*.vue",
    "types/**/*.d.ts"
  ]
}