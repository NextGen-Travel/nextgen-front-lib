{
  "compilerOptions": {
    "target": "ES2022",
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "./lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "ES2015"
    ]
  }
}
