{
  "compilerOptions": {
    "target": "ES2022",
    "downlevelIteration": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "noEmit": false,
    "baseUrl": ".",
    "rootDir": "./core",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "jsxImportSource": "vue",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "types": [
      "vite/client",
      "@amap/amap-jsapi-types",
      "@types/google.maps",
      "@types/apple-signin-api",
      "@types/facebook-js-sdk",
      "@types/google.accounts",
      "@types/node",
      "vuetify"
    ],
    "lib": [
      "esnext",
      "WebWorker",
      "dom"
    ]
  },
  "include": [
    "core/**/*.ts",
    "core/**/*.d.ts",
    "core/**/*.tsx",
    "core/**/*.vue"
  ]
}